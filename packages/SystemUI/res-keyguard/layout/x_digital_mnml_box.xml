<?xml version="1.0" encoding="utf-8"?>
<com.android.keyguard.clock.ClockLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|top">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/title_clock_padding"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:background="@drawable/clock_new_bg"
        android:orientation="vertical"
        android:padding="16dp">

        <TextClock
            android:id="@+id/clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/widget_vertical_padding_clock"
            android:alpha="0.75"
            android:letterSpacing="0.1"
            android:textSize="30sp"
            android:format12Hour="@string/keyguard_widget_12_hours_format"
            android:format24Hour="@string/keyguard_widget_24_hours_format"/>

        <TextClock
            android:id="@+id/bigDateDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.15"
            android:textSize="30sp"
            android:format12Hour="EEEE"
            android:format24Hour="EEEE"/>

        <TextClock
            android:id="@+id/bigDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.15"
            android:textColor="#fff"
            android:textSize="30sp"
            android:format12Hour="MMMM d, yyyy"
            android:format24Hour="MMMM d, yyyy"/>

    </LinearLayout>
</com.android.keyguard.clock.ClockLayout>
